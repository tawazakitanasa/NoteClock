<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/custom_toast_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FF5733"> <!-- Customize background color as needed -->

    <!-- Add your TextView or other views here -->
    <TextView
        android:id="@+id/customToastText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF" /> <!-- Customize text color as needed -->
</LinearLayout>